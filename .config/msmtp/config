defaults
aliases /etc/aliases

syslog LOG_MAIL

tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
#tls_certcheck off

auth on

account yandex
host smtp.yandex.ru
port 587
from null@mkro.tk
user null@mkro.tk
passwordeval gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/yandex.gpg

account gmail
host smtp.gmail.com
port 587
from finalitik@gmail.com
user finalitik@gmail.com
passwordeval gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/gmail-finalitik.gpg

account default : gmail

# vim:filetype=msmtp
