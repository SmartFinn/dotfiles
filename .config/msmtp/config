defaults
aliases /etc/aliases

syslog LOG_MAIL

tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
#tls_certcheck off

auth on

account outlook
host smtp.office365.com
port 587
from smartfinn@outlook.com
user smartfinn@outlook.com
passwordeval gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/outlook-smartfinn.gpg

account gmail
host smtp.gmail.com
port 587
from finalitik@gmail.com
user finalitik@gmail.com
passwordeval gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/gmail-finalitik.gpg

account mkro.tk
host smtp.gmail.com
port 587
from null@mkro.tk
user null@smartfinn.com
passwordeval gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/gmail-smartfinn.gpg

account default : gmail
