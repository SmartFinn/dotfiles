defaults
aliases /etc/aliases

syslog LOG_MAIL

auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account outlook
domain outlook.com
host smtp.office365.com
port 587
from smartfinn@outlook.com
user smartfinn@outlook.com

account gmail
domain gmail.com
host smtp.gmail.com
port 465
tls_starttls off
from finalitik@gmail.com
user finalitik@gmail.com

account mkro.pp.ua
domain mkro.pp.ua
host smtp.gmail.com
port 465
tls_starttls off
from null@mkro.pp.ua
user null@mkro.pp.ua

account default : gmail
