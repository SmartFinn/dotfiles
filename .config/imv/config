# Default config for imv

[options]

# Suppress built-in key bindings, and specify them explicitly in this
# config file.
suppress_default_binds = true
scaling_mode = shrink

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
# Define some key bindings
q = quit

# Image navigation
<Left> = prev
<bracketleft> = prev
<Right> = next
<bracketright> = next
p = prev
n = next
gg = goto 0
<Shift+G> = goto -1

# Panning
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
o = zoom -1
<equal> = zoom actual

# Other commands
x = close
f = fullscreen
d = overlay
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset
e = exec echo $imv_current_file
<Delete> = exec gio trash $imv_current_file

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1

# Rotate the currently open image (prefer lossless rotation for JPEG)
<Shift+R> = exec jpegtran -perfect -rotate 90 -outfile "$imv_current_file" "$imv_current_file" || mogrify -rotate 90 "$imv_current_file"
<Ctrl+Shift+R> = exec jpegtran -perfect -rotate 270 -outfile "$imv_current_file" "$imv_current_file" || mogrify -rotate -90 "$imv_current_file"
