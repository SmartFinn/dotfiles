[alias]
	br = branch
	ch = checkout
	cl = clone
	changes = log --all --abbrev-commit --cherry --find-renames --pretty=medium --name-status
	journal = log --all --pretty=medium
	lo = log --abbrev-commit --graph --max-count=22
	lg = log -p
	ls = ls-files
	st = status --short --branch
	type = cat-file -t
	dump = cat-file -p
	history = log --graph --all
	get-commit-count = rev-list HEAD --count
	ls-diff = diff --name-status
	please = push --force-with-lease
	amend = commit --amend
	drop = reset --hard HEAD
	undo = reset HEAD^
	hardreset = reset --hard origin/master
	branches = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:blue)%(objectname:short)%(color:reset) - %(contents:subject) - %(color:bold)%(authorname)%(color:reset) %(color:green)(%(committerdate:relative))%(color:reset)'
	find = log --all --full-history --
	# dotbare commands
	fadd = !dotbare fadd
	fbackup = !dotbare fbackup
	fcheckout = !dotbare fcheckout
	fedit = !dotbare fedit
	finit = !dotbare finit
	flog = !dotbare flog
	freset = !dotbare freset
	fstash = !dotbare fstash
	fstat = !dotbare fstat
	funtrack = !dotbare funtrack
	fupgrade = !dotbare fupgrade
