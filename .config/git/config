[tag]
	gpgSign = true
[init]
	defaultBranch = main
[pull]
	ff = only
[push]
	default = simple
	autoSetupRemote = true
	followTags = yes
[merge]
	tool = vimdiff3
	guitool = meld
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "vimdiff3"]
	cmd = "${EDITOR:-vim}" -R -d "$LOCAL" "$MERGED" "$REMOTE" '+f local' '+winc l' '+set noro' '+%!cat '"$BASE" '+winc l' '+f remote' '+winc h'
[mergetool "nvimdiff"]
	cmd = nvim -d "$LOCAL" "$REMOTE" "$MERGED" -c 'wincmd w' -c 'wincmd J'
[mergetool "vscode"]
	cmd = code --wait "$MERGED"
