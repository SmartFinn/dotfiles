# ZSH plugins and their settings

ZSH_PLUGINS=(
	activate-venv
	auto-hist-fix
	clip-tools
	clipcopy
	copyq
	custom-completions
	ding
	exa
	# fzf
	fzf-widgets
	files-completer
	gio-trash
	git-extras-completion
	grlm-features
	insert-datestamp
	pet
	ranger
	# tmux-pane-words
	zsh-abbrev
)

# Anibody plugin file
# https://getantibody.github.io/usage/
read -r -d '' ANTIBODY_BUNDLE <<BUNDLE
kazhala/dotbare
zdharma/fast-syntax-highlighting
