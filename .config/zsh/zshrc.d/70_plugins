robbyrussell/oh-my-zsh path:plugins/fancy-ctrl-z
#robbyrussell/oh-my-zsh path:plugins/command-not-found
BUNDLE

## ==[Plugins]===(pre-configuration)==================================

# Minimal
MNML_USER_CHAR='$'
MNML_NOMRAL_CHAR='-'
MNML_INSERT_CHAR=$(printf '>%.0s' {1..${SHLVL:-1}})
MNML_PROMPT=(mnml_ssh mnml_pyenv _prompt_ranger mnml_status mnml_keymap)
MNML_RPROMPT=(mnml_err _prompt_collapsed_cwd_color mnml_git _prompt_git_indicators)
MNML_INFOLN=(mnml_err mnml_jobs _prompt_info_line mnml_files)
# MNML_MAGICENTER=(mnml_me_dirs mnml_me_ls mnml_me_git)

VIRTUAL_ENV_DISABLE_PROMPT=1
FORGIT_NO_ALIASES=1


# zsh-abbrev
typeset -gA ZSH_ABBREVIATIONS
ZSH_ABBREVIATIONS+=(
	"vi"	"vim"
	"gti"	"git"
	"got"	"git"
	"dfn"	"dnf"
	"comit" "commit"
	"scr"	"src"
	"dokcer"	"docker"
	"docekr"	"docker"
	"dokcer-compose"	"docker-compose"
	"dwon"	"down"
	"iamge"	"image"
	"amke"	"make"
	"maek"	"make"
	"amek"	"make"
	"mkae"	"make"
	"soud"	"sudo"
	"sudp"	"sudo"
	"suod"	"sudo"
	"sduo"	"sudo"
	"sdo"	"sudo"
)


## ==[Plugins]===(initialize)=========================================

# initialize plugins installed with antibody
if (( $+commands[antibody] )); then
	source <(antibody bundle <<< $ANTIBODY_BUNDLE)
fi

# initialize custom plugins (more clean way than with antibody)
zsh_load_plugins "${ZSH_PLUGINS[@]}"


## ==[Plugins]===(post-configuration)=================================

ZSH_AUTOSUGGEST_CLEAR_WIDGETS+=expand-or-complete
ZSH_AUTOSUGGEST_CLEAR_WIDGETS+=buffer-empty
ZSH_AUTOSUGGEST_CLEAR_WIDGETS+=completer
# ZSH_AUTOSUGGEST_CLEAR_WIDGETS+=magic-space


