# Change title to command name
function set-title {
	[[ -n "$RANGER_LEVEL" ]] && return 0
	set -- "${(@s/ /)1}"  # converts first arg to an array
	(( ${+builtins[$1]} )) && return 0
	# (( ${+aliases[$1]} )) && return 0
	case "$1" in
		sudo|ssh|sudoedit)
			set -- "${(@)@:#-*}"  # removes options (-*)
			printf "\e]2;%s\a" "$1:t $2:t"
			;;
		*)
			printf "\e]2;%s\a" "$1:t"
	esac
}

autoload -Uz add-zsh-hook
add-zsh-hook precmd set-title
add-zsh-hook preexec set-title

# vim:ft=zsh
